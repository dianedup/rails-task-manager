<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <div class="task">
    <div class="completion">
      <%= task.completed ? '[ x ]' : '[ . ]'%>
    </div>
    <div class="task-data">
      <p><%= task.title %></p>
      <%= link_to 'See details', task_path(task) %>
      <%= link_to 'Bin', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
<%= link_to '+ Add a new task', new_task_path %>
